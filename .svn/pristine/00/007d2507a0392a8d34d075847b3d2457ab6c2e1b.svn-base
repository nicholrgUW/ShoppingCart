    private Item myItem;
    /**
     * 
     */
    private int myQuantity;
    /**
     * 
     * @param theItem
     * @param theQuantity
     */
    public ItemOrder(final Item theItem, final int theQuantity) {
//        if(theQuantity >= 0){
//            myQuantity = theQuantity;
//        } else {
//            myQuantity = 0;
//        }
        myQuantity = theQuantity;
        myItem = theItem;
       
    }

    /**
     * @return Returns total price of the order as a BigDecimal.
     */
    public BigDecimal calculateOrderTotal() {
        BigDecimal returnTotal;
        if(this.myQuantity <= 0){
            returnTotal = BigDecimal.ZERO;
        } else {
            returnTotal = myItem.calculateItemTotal(myQuantity);
        }
        //is this really just a call to ItemTotal?
        //returnTotal = myItem.calculateItemTotal(myQuantity);
        return returnTotal;
    }

    /**
     * @return Returns a reference to myItem.
     */
    public Item getItem() {
        //really this simple?
        return myItem;
    }


    @Override
    public String toString() {
        return this.getItem().toString() + ", Quantity: " + this.myQuantity;
    }

}
